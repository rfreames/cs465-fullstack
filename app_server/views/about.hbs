<!DOCTYPE html>
<!-- Website template by freewebsitetemplates.com -->
<html>
<head>
	<meta charset="UTF-8">
	<title>About - Travlr Getaways Web Template</title>
	<link rel="stylesheet" href="css/style.css" type="text/css">
</head>
<body>
	<div id="background">
		<div id="page">
			{{> header}}
			<div id="contents">
				<div class="box">
					<div>
						<div class="body">
							<h1>About</h1>
							{{#each aboutUs}}
								{{#if about}}
									<h2>{{this.name}}</h2>
									{{{this.description}}}
								{{/if}}
							{{/each}}
								<div class="ads">
								{{#each aboutUs}}
									{{#if ad}}
										<h2>{{this.name}}</h2>
										{{{this.description}}}
									{{/if}}
								{{/each}}
								</div>
							{{#each aboutUs}}
								{{#if extra}}
									<h2>{{this.name}}</h2>
									{{{this.description}}}
								{{/if}}
							{{/each}}
						</div>
					</div>
				</div>
			</div>
		</div>
		{{> footer}}
	</div>
</body>
</html>